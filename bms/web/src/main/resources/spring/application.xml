<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- Baidu BCS Bean -->
    <bean id="bcsCredentials" class="com.baidu.inf.iis.bcs.auth.BCSCredentials">
        <constructor-arg type="java.lang.String" value="${baidu.bcs.access.key}"/>
        <constructor-arg type="java.lang.String" value="${baidu.bcs.secret.key}"/>
    </bean>
    <bean id="baiduBCS" class="com.baidu.inf.iis.bcs.BaiduBCS">
        <constructor-arg ref="bcsCredentials"/>
        <constructor-arg type="java.lang.String" value="${baidu.bcs.host}"/>
    </bean>
    <bean class="cn.greenwishing.bms.service.impl.FileServiceImpl">
        <property name="baiduBCS" ref="baiduBCS"/>
    </bean>

    <bean id="billingService" class="cn.greenwishing.bms.service.impl.BillingServiceImpl"/>
    <bean id="userService" class="cn.greenwishing.bms.service.impl.UserServiceImpl"/>
    <bean id="articleService" class="cn.greenwishing.bms.service.impl.ArticleServiceImpl"/>
</beans>