<?xml version="1.0" encoding="UTF-8"?>

<decorators defaultdir="/WEB-INF/jsp/decorators">
    <decorator name="system" page="system.jsp">
        <pattern>/system/*</pattern>
        <pattern>/article*</pattern>
    </decorator>

    <excludes>
        <pattern>/css/*</pattern>
        <pattern>/js/*</pattern>
        <pattern>/images/*</pattern>

        <pattern>/index.jsp*</pattern>
        <pattern>/login*</pattern>
        <pattern>/400.jsp*</pattern>
        <pattern>/403.jsp*</pattern>
        <pattern>/404.jsp*</pattern>
        <pattern>/exception.jsp*</pattern>

        <pattern>/system/billing/record*</pattern>
        <pattern>/system/billing/statistics*</pattern>
        <pattern>/system/billing/nearest*</pattern>


    </excludes>
</decorators>