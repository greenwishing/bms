<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">
    <class name="cn.greenwishing.bms.domain.user.User" dynamic-update="true" table="`user`">
        <id name="id" column="id" type="java.lang.Integer">
            <generator class="native"/>
        </id>
        <property name="guid" column="guid" type="java.lang.String"/>
        <property name="creationTime" column="creation_time" type="org.joda.time.contrib.hibernate.PersistentDateTime"/>
        <property name="account" column="account" type="java.lang.String"/>
        <property name="username" column="username" type="java.lang.String"/>
        <property name="password" column="password" type="java.lang.String"/>
        <property name="lastLoginTime" column="last_login_time" type="org.joda.time.contrib.hibernate.PersistentDateTime"/>
        <property name="status" column="status">
            <type name="cn.greenwishing.bms.persistence.hibernate.EnumVarcharType">
                <param name="enumClass">cn.greenwishing.bms.domain.user.UserStatus</param>
            </type>
        </property>
    </class>
</hibernate-mapping>