<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">
    <class name="cn.greenwishing.bms.domain.article.Article" table="article" dynamic-update="true">
        <id name="id" column="id" type="java.lang.Integer">
            <generator class="increment"/>
        </id>
        <property name="guid" column="guid" type="java.lang.String"/>
        <property name="creationTime" column="creation_time" type="org.joda.time.contrib.hibernate.PersistentDateTime"/>
        <property name="title" column="title" type="java.lang.String"/>
        <property name="content" column="content" type="java.lang.String"/>
        <many-to-one name="category" column="category_id" class="cn.greenwishing.bms.domain.article.ArticleCategory"/>
        <many-to-one name="author" column="author_id" class="cn.greenwishing.bms.domain.user.User"/>
    </class>
</hibernate-mapping>