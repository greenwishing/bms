<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">
    <class name="cn.greenwishing.bms.domain.billing.BillingTemplate" dynamic-update="true" table="billing_template">
        <id name="id" column="id" type="java.lang.Integer">
            <generator class="increment"/>
        </id>
        <property name="guid" column="guid" type="java.lang.String"/>
        <property name="creationTime" column="creation_time" type="org.joda.time.contrib.hibernate.PersistentDateTime"/>

        <many-to-one name="user" column="user_id" class="cn.greenwishing.bms.domain.user.User"/>
        <property name="name" column="name" type="java.lang.String"/>
        <property name="type" column="type">
            <type name="cn.greenwishing.bms.persistence.hibernate.EnumVarcharType">
                <param name="enumClass">cn.greenwishing.bms.domain.billing.BillingType</param>
            </type>
        </property>
        <many-to-one name="category" column="category_id" class="cn.greenwishing.bms.domain.billing.BillingCategory"/>
        <many-to-one name="subcategory" column="subcategory_id" class="cn.greenwishing.bms.domain.billing.BillingSubcategory"/>
        <property name="amount" column="amount" type="java.math.BigDecimal"/>
    </class>
</hibernate-mapping>