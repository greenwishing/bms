<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">
    <class name="cn.greenwishing.bms.domain.billing.Billing" dynamic-update="true" table="billing">
        <id name="id" column="id" type="java.lang.Integer">
            <generator class="increment"/>
        </id>
        <property name="guid" column="guid" type="java.lang.String"/>
        <property name="creationTime" column="creation_time" type="org.joda.time.contrib.hibernate.PersistentDateTime"/>
        <property name="name" column="name" type="java.lang.String"/>
        <property name="description" column="description" type="java.lang.String"/>
        <property name="type" column="type">
            <type name="cn.greenwishing.bms.persistence.hibernate.EnumVarcharType">
                <param name="enumClass">cn.greenwishing.bms.domain.billing.BillingType</param>
            </type>
        </property>
        <property name="amount" column="amount" type="java.math.BigDecimal"/>
        <property name="occurredTime" column="occurred_time" type="org.joda.time.contrib.hibernate.PersistentLocalDate"/>
        <many-to-one name="occurredUser" column="occurred_user_id" class="cn.greenwishing.bms.domain.user.User"/>
        <many-to-one name="operator" column="operator_id" class="cn.greenwishing.bms.domain.user.User"/>
    </class>
</hibernate-mapping>